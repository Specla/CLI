{
  "name": "specla",
  "description": "The core Specla module",
  "version": "0.5.0-3",
  "license": "MIT",
  "scripts": {
    "test": "npm run lint && jest --coverage",
    "test:watch": "jest --watch",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix | snazzy",
    "build": "babel src/ -D -d ./lib",
    "build:watch": "babel src/ -D -d ./lib --watch",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run build && npm test"
  },
  "main": "lib/index.js",
  "bin": {
    "specla": "lib/cli/index.js"
  },
  "files": [
    "lib",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "specla"
  ],
  "author": {
    "name": "Frederik Kvartborg Albertsen",
    "email": "hello@kvartborg.net",
    "url": "https://kvartborg.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/specla/specla"
  },
  "bugs": {
    "url": "https://github.com/specla/specla/issues"
  },
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "@specla/autoloader": "^2.0.0-1",
    "@specla/config": "^1.2.1",
    "@specla/dot-string": "^2.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "test"
    ],
    "watchPathIgnorePatterns": [
      "tmp"
    ]
  }
}
